<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <context:property-placeholder location="classpath:asl-service.properties" />

    <import resource="classpath*:**/asl-persistence-context.xml" />

    <bean id="consoleConnector" class="pl.edu.agh.ConsoleConnector">
        <property name="daemonMaster" ref="daemonMaster"/>
        <property name="host" value="${console.host}"/>
        <property name="port" value="${console.port}"/>
        <property name="daemonPort" value="${service.port}"/>
    </bean>

    <bean id="daemonMaster" class="pl.edu.agh.DaemonMaster">
        <property name="daemons">
            <list value-type="pl.edu.agh.Daemon">
                <ref bean="cpuDaemon"/>
                <ref bean="diskDaemon"/>
                <ref bean="networkDaemon"/>
                <ref bean="memoryDaemon"/>
                <ref bean="systemLogDaemon"/>
            </list>
        </property>
        <property name="mode" value="push"/>
        <property name="pollRate" value="60000"/>
    </bean>

    <bean id="cpuDaemon" class="pl.edu.agh.CpuDaemon">
        <property name="name" value="cpu"/>
        <property name="dbConnector" ref="dbConnector"/>
        <property name="cpuDAO" ref="cpuDAO"/>
        <property name="configuration">
            <map>
                <entry key="sleepTime" value="10000"/>
                <entry key="enabled" value="1"/>
                <entry key="tempMin">
                    <null/>
                </entry>
                <entry key="tempMax">
                    <null/>
                </entry>
                <entry key="usageMin">
                    <null/>
                </entry>
                <entry key="usageMax">
                    <null/>
                </entry>
                <entry key="fanMin">
                    <null/>
                </entry>
                <entry key="fanMax">
                    <null/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="diskDaemon" class="pl.edu.agh.DiskDaemon">
        <property name="name" value="disk"/>
        <property name="dbConnector" ref="dbConnector"/>
        <property name="diskDAO" ref="diskDAO"/>
        <property name="configuration">
            <map>
                <entry key="sleepTime" value="10000"/>
                <entry key="enabled" value="1"/>
                <entry key="readMin">
                    <null/>
                </entry>
                <entry key="readMax">
                    <null/>
                </entry>
                <entry key="writeMin">
                    <null/>
                </entry>
                <entry key="writeMax">
                    <null/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="networkDaemon" class="pl.edu.agh.NetworkDaemon">
        <property name="name" value="network"/>
        <property name="dbConnector" ref="dbConnector"/>
        <property name="networkDAO" ref="networkDAO"/>
        <property name="configuration">
            <map>
                <entry key="sleepTime" value="10000"/>
                <entry key="enabled" value="1"/>
                <entry key="downloadMin">
                    <null/>
                </entry>
                <entry key="downloadMax">
                    <null/>
                </entry>
                <entry key="uploadMin">
                    <null/>
                </entry>
                <entry key="uploadMax">
                    <null/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="memoryDaemon" class="pl.edu.agh.MemoryDaemon">
        <property name="name" value="memory"/>
        <property name="dbConnector" ref="dbConnector"/>
        <property name="memoryDAO" ref="memoryDAO"/>
        <property name="configuration">
            <map>
                <entry key="sleepTime" value="10000"/>
                <entry key="enabled" value="1"/>
                <entry key="memoryMin">
                    <null/>
                </entry>
                <entry key="memoryMax">
                    <null/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="systemLogDaemon" class="pl.edu.agh.SystemLogDaemon">
        <property name="name" value="syslog"/>
        <property name="dbConnector" ref="dbConnector"/>
        <property name="systemLogsDAO" ref="systemLogsDAO"/>
        <property name="configuration">
            <map>
                <entry key="sleepTime" value="10000"/>
                <entry key="enabled" value="1"/>
            </map>
        </property>
        <property name="systemLogs">
            <list value-type="pl.edu.agh.SystemLog">
                <null/>
                <!--
                <ref bean="syslogSystemLog"/>
                <ref bean="kernSystemLog"/>
                <ref bean="authSystemLog"/>
                <ref bean="bootSystemLog"/>
                -->
            </list>
        </property>
    </bean>

    <bean id="syslogSystemLog" class="pl.edu.agh.SystemLog">
        <property name="filePath" value="/var/log/syslog"/>
        <property name="systemLogsDAO" ref="systemLogsDAO"/>
    </bean>

    <bean id="kernSystemLog" class="pl.edu.agh.SystemLog">
        <property name="filePath" value="/var/log/kern.log"/>
        <property name="systemLogsDAO" ref="systemLogsDAO"/>
    </bean>

    <bean id="authSystemLog" class="pl.edu.agh.SystemLog">
        <property name="filePath" value="/var/log/auth.log"/>
        <property name="systemLogsDAO" ref="systemLogsDAO"/>
    </bean>

    <bean id="bootSystemLog" class="pl.edu.agh.SystemLog">
        <property name="filePath" value="/var/log/boot.log"/>
        <property name="systemLogsDAO" ref="systemLogsDAO"/>
    </bean>

    <!--
    <bean id="dmesgSystemLog" class="pl.edu.agh.SystemLog">
        <property name="filePath" value="/var/log/dmesg"/>
        <property name="dbConnection" ref="dbConnection"/>
    </bean>
    -->

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="url" value="${db.url}"/>
        <property name="username" value="${db.username}"/>
        <property name="password" value="${db.password}"/>
    </bean>

    <bean id="dbConnector" class="pl.edu.agh.DbConnector">
        <property name="serviceDAO" ref="serviceDAO"/>
        <property name="host" value="${service.host}"/>
        <property name="port" value="${service.port}"/>
    </bean>

</beans>
